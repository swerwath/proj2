<% current_user.clubs.each do |c| %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= c.name %> <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li><%= link_to '.all', c %></li>
      <% c.teams.each do |t| %>
        <% if current_user.teams.include? t %>
          <li><%= link_to "."+t.name, t %></li>
        <% end %>
      <% end %>
      <% c.teams.each do |t| %>
        <% if not current_user.teams.include? t %>
          <li><%= link_to "."+t.name, t %></li>
        <% end %>
      <% end %>
      <% if c.officers.include? current_user %>
        <li><%= link_to "Create new team", create_team_path(:club_id => c.id), :method => :get %></li>
      <% end %>
    </ul>
  </li>
<% end %>
