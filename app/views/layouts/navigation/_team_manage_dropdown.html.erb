<% teams_managed = current_user.teams_led %>
<% if teams_managed.size > 0 %>
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage Teams<span class="caret"></span></a>
  <ul class="dropdown-menu">
    <% teams_managed.each do |t| %>
      <li><%= link_to t.club.name.downcase+"#"+t.name, [:edit, t] %></li>
    <% end %>
  </ul>
</li>
<% end %>
